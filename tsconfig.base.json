{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ng-os/memory/feature": ["libs/memory/feature/src/index.ts"],
      "@ng-os/ng-os/core": ["libs/ng-os/core/src/index.ts"],
      "@ng-os/ng-os/security": ["libs/ng-os/security/src/index.ts"],
      "@ng-os/todo/feature": ["libs/todo/feature/src/index.ts"],
      "@ng-os/types": ["libs/types/src/index.ts"],
      "@ng-os/vocabulary-trainer/feature": [
        "libs/vocabulary-trainer/feature/src/index.ts"
      ],
      "@ng-os/weather/feature": ["libs/weather/feature/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
