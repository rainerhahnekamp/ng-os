{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ng-app-platform/memory/feature": ["libs/memory/feature/src/index.ts"],
      "@ng-app-platform/ng-app-platform/core": [
        "libs/ng-app-platform/core/src/index.ts"
      ],
      "@ng-app-platform/ng-app-platform/security": [
        "libs/ng-app-platform/security/src/index.ts"
      ],
      "@ng-app-platform/types": ["libs/types/src/index.ts"],
      "@ng-app-platform/vocabulary-trainer/feature": [
        "libs/vocabulary-trainer/feature/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
